<%= search_form_for @q do |f| %>

<div class="">
  <%= f.label :name_or_content_or_address_cont, "Keyword" %>
  <%= f.search_field :name_or_content_or_address_cont %>

  <%= f.label :event_languages_language_id_eq, "言語" %>
  <%= f.select :event_languages_language_id_eq, @languages.map { |lang| [lang.ja_name, lang.id]}, include_blank: true %>
</div>

<div class="">
  <%= f.label :schedule %>
  <%= f.datetime_field :schedule_gteq, min: Time.zone.today %> ~
  <%= f.datetime_field :schedule_lteq, min: Time.zone.today %>
</div>

<div class="">
  <%= f.radio_button :online_eq, true %>
  <%= f.label :online_eq, "オンラインイベント", value: "true" %>
  <%= f.radio_button :online_eq, false%>
  <%= f.label :online_eq, "リアルイベント", value: "false" %>
  <%= f.radio_button :online_eq, '' %>
  <%= f.label :online_eq, "どちらでも", value: '' %>
</div>

  <%= f.submit "検索" %>
<% end %>
